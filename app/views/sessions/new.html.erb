<%= form_with scope: :user, url: "/login", local: true, class: :"card " do |form| %>
<div class="card-body">
<p>
<%=  form.label :email %>
<%= form.email_field :email, class: :"form-control"%>
</p>
<p>
<%=  form.label :password %>
<%= form.password_field :password, class: :"form-control" %>
</p>
<p>
<%=  submit_tag "submit", class: "btn btn-primary"%>
</p>
</div>

<% end %>